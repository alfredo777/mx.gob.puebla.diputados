<ons-card modifier="material modifier2 super-card">
<div class="axdiv-card" style="width:100%; position:relative; float:left;">
	<div class="pull-left" style="width: 30%;">
		<center>
    	<div class="circle-2 {{diputado.partido}}"></div> 
		<img src="{{diputado.img.medium.url}}" class="circular-img-2">
		</center>
    </div>
	<div class="title pull-left" style="width: 70%;">
	  <p style="margin-top: 17px; font-size: 15px; width: 80%;"><b>{{diputado.nombre}} {{diputado.apellido}}</b></p>
	  <p style="margin-top: 17px; font-size: 12px; width: 80%;" class="text-{{blankid diputado.partido}}">{{diputado.partido}}</p>

	</div>
</div>
<div class="pull-left" style="width:100%;">
	<div style="height: 400px; oveflow:auto; text-align:justify; padding 10px;">
		<div class="card" style="padding:20px;">
			<br/>
			<h2 class="card__title" style="color:#847041;">{{propuesta.titulo}}</h2>
			<p><b>Propuesta para {{propuesta.fecha}}</b></p>
			<div class="single-circle {{propuesta.estatus}}" style="margin-top: -5px;"></div><p > &nbsp; <b>Status:</b> {{propuesta.estatus}}</p>
			<div class="card__content"><br/><b>Propuesta:</b> {{propuesta.propuesta}}</div><br/>
			<center>
			<a  class="button" onclick="cordova.InAppBrowser.open('{{propuesta.documento.url}}', '_system'); return false;">Ver Documento <i class="fas fa-file-pdf"></i></a><br/><br/><br/>
		   </center>
		</div>
	</div>
</div>
</ons-card>